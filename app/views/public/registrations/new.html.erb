<div class="container">
  <div class="row">
    <div class='pt-3 pl-5 ml-5'>
      <h1>新規会員登録</h1>
    </div>
  </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group col-12">
      <%= f.label :"名前", class: "col-sm-2 control-label" %>
      <%= f.label :"(姓)", class: "mr-3" %>
      <%= f.text_field :last_name, autofocus: true, :placeholder => "令和" %>


      <%= f.label :"(名)", class: "ml-2 mr-3" %>
      <%= f.text_field :first_name, autofocus: true, :placeholder => "道子" %>
    </div>

    <div class="form-group col-12">
      <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "レイワ"  %>

      <%= f.label :"(メイ)",class: "ml-2" %>
      <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ミチコ" %>
    </div>


    <div class="form-group col-12">
      <%= f.label :"メールアドレス", class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :email, autofocus: true, :placeholder => "sample@example.com" %>
    </div>

    <div class="form-group col-12 text-nowrap">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :postcode, autofocus: true, :placeholder => "0000000" %>
    </div>

    <div class="form-group col-12">
      <%= f.label :"住所", class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", class: "col-5" %>
    </div>

    <div class="form-group col-12 text-nowrap">
      <%= f.label :"電話番号(ハイフンなし)",class: "col-sm-2 control-label mr-5" %>
      <%= f.text_field :telephone_number, autofocus: true, :placeholder => "0000000000",class: "col-sm-2 control-label mr-5" %>
    </div>

    <div class="form-group col-12 text-nowrap">
      <%= f.label :"パスワード６文字以上",class: "col-sm-2 control-label mr-5" %>
      <% if @minimum_password_length %>
      <em><% @minimum_password_length %></em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="form-group col-12">
      <%= f.label :"パスワード(確認用)",class: "col-sm-2 control-label mr-5" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class="actions col-8 text-center">
      <%= f.submit "新規登録",class: 'btn btn-primary' %>
    </div>

<% end %>

<div class='row ml-5 mt-5'>
  <h4>既に登録済みの方<h4>
</div>

<div class="row">
 <div class="col-4 offset-1">
   <%= link_to "こちら", new_customer_session_path %> からログインしてください。
 </div>
</div>