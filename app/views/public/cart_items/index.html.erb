<div class="container">

  <div class="row">
    <div class="col">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col">
      <%= button_to "カートを空にする", cart_items_destroy_all_path,method: :delete, class:"btn btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th></th>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image,size: "100x70" %></td>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <%= form_with model:cart_item do |f| %>
          <td>
              <%= f.select:amount,*[1..10] %>
              <%= f.submit "変更", class:"btn btn-sm btn-success" %>
          </td>
          <% end %>
          <td><%= cart_item.subtotal.round.to_s(:delimited) %></td>
          <td><%= button_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-sm btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-between">
    <div class="col"><%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %></div>
    <table class="col">
      <tr>
        <td>合計金額</td>
        <td>¥<%= @subtotal.round.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>

  <div class="row justify-content-center">
    <% if @cart_items.blank? %>
    　<!-カートに商品が無い場合ボタンが押せない->
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success disabled" %>
    <% else %>
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
    <% end %>
  </div>
</div>