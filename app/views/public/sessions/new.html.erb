<div class="container">
  <h1 class="col-7 my-5"><span class = "alart alert-secondary text-dark">ログイン</span></h1>

  <div class="row">
      <h5><span class = "alart alert-secondary text-dark">会員の方はこちらからログイン</span><h5>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  <div class="form-group row ml-5">
    <%= f.label :"メールアドレス" , class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "sample@example.com", class: "col-sm-4 form-control-static" %>
  </div>

  <div class="form-group row ml-5">
    <%= f.label :"パスワード", class: "col-sm-3 control-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4 form-control-static" %>
  </div>

  <div class="actions col-8 text-center">
    <%= f.submit "ログイン",class: 'btn btn-primary' %>
  </div>

<% end %>

  <div class="row ml-5 mt-3">
    <h5><span class = "alart alert-secondary">会員登録がお済みでない方</span></h5>
  </div>

  <div class="row">
    <div class="col-4 offset-3">
     <%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。
    </div>
  </div>
</div>

