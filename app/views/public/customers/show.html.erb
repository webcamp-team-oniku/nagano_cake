<div class='container'>
  <div class='d-flex bd-highlight mb-3 mt-3 ml-5 pl-5'>
      <h3 class = 'ml-5 pl-5'><p class ="alart alert-secondary text-dark">マイページ</p></h3>
  </div>
  <div class='row pt-3 pb-2 ml-3'>
    <h5 class = "mr-5">登録情報</h5>
    <%= link_to "　編集する　", customers_edit_path, class: "btn btn-success btn-sm" %>
  </div>

  <div class='row my-3 col-6'>
    <table class='table table-hover table-inverse table-bordered'>
      <tr>
        <th class="table-active">氏名</th>
        <td class = 'col-6'><%= @customer.last_name %><%= @customer.first_name %></td>
      <tr>
        <th class="table-active">カナ</th>
        <td class = 'col-6'><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-active">郵便番号</th>
        <td class = 'col-6'><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th class="table-active">住所</th>
        <td class = 'col-6'><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</th>
        <td class = 'col-6'><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">メールアドレス</th>
        <td class = 'col-6'><%= @customer.email %></td>
    </table>
  </div>

  <div class='row my-3 ml-3 col-md-5'>
    <div class="row mb-3 d-flex justify-content-center">
      <h5 class = "mr-5" >配送先</h5>
      <%= link_to "　一覧を見る　", deliveries_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>

  <div class='row my-3 ml-3 col-md-5'>
    <div class="row mb-3 d-flex justify-content-center">
      <h5 class = "mr-4" >注文履歴</h5>
      <%= link_to "　一覧を見る　", orders_path, class: 'btn btn-primary btn-sm' %>
    </div>

  </div>
</div>

