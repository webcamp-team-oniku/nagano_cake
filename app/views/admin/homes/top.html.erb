<div clas="container">

  <div class="row mt-5">
    <div class="mx-auto col-11 col-sm-10">
      <div class="my-4 d-flex">
      <h3 class="bg-light text-center px-2">注文履歴一覧</h3>
      </div>

      <table class="table table-hover">
        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        
        <tbody>
          <% @orders.each do |orrder| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d/%H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_items.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= paginate @orders %>
    </div>
  </div>
</div>