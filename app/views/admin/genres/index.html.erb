<div class="container">
  <h5 class="col-md-7 mb-5 mt-5">
    <span class="px-3 ml-5 bg-ligh alert-secondary">ジャンル一覧・追加</span>
  </h5>

    <div class="row">
      <div class="col-10">
        <%= form_with model: [:admin, @genre] do |f| %>
          <span class="mr-5">ジャンル名</span>
          <%= f.text_field :name, placeholder:"ジャンル名" %>
          <%= f.submit "新規登録", class: "ml-5 btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div  class="col-5">
        <table class="table table-hover table-inverse  mt-5" >
          <thead class="thead-light">
            <tr>
              <th class="text-center">ジャンル</th>
              <th></th>
            </tr>
          </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する",edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
</div>