<div class="container">
  
  <div class="row">
    
    <div class="col">
    <h4>注文履歴詳細</h4>
    
      <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.post_code %><%= @order.address %><br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td><%= form_with model: Order, url: admin_order_path(@order.id), method: :patch do |f| %>
              <%= f.select :status, Order.statuses_i18n.invert, {prompt: true}, class:"form-control form-control-sm"  %>
              <%= f.submit "更新" , class: "btn  btn-sm btn-success" %>
            　<% end %>
          </td>
        </tr>
      </table>
      
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <%= order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.add_tax_price %> 円</td>
            <td><%= order_item.item.amount %> 個</td>
            <td><%= (order_item.item.add_tax_price * order_item.item.amount).to_s(:delimited) %> 円</td>
            <td><%= form_with model: order_items, url: admin_order_item_path(@order.item), method: :patch do |f| %>
                <%= f.select :status, OrderItem.statuses_i18n.invert, {prompt: true}, class:"form-control form-control-sm"  %>
                <%= f.submit "更新" , class: "btn  btn-sm btn-success" %>
            　   <% end %>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>

<div>
  <h4>商品合計<%= (@order.total_price - @order.shipping_cost).to_s(:delimited) %> 円 </h4>
  <h4>送料<%= @order.shipping_cost %> 円</h4>
  <h4>請求金額合計<%= @order.total_price.to_s(:delimited) %> 円</h4>
</div>