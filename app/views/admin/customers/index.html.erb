<div class='container'>
  <div class='row'>
    <div class='col-10'>
      <div class="d-flex bd-highlight mb-0 mt-3 ml-5">
        <h4><p class = "alart alert-secondary text-dark">　会員一覧　</p></h4>
　　　</div>
　　　<div class='offset-2'>
        <table class="table table-hover table-inverse" >
          <thead>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>

                <td>
                  <%= link_to  admin_customer_path(customer.id) do %>
                    <span class="text-dark border-bottom border-dark">
                      <!--# 姓(last_name)と名(irst_name)を合わせて表示する-->
                      <%=  customer.full_name %>
                    </span>
                  <% end %>
                </td>

                <td><%= customer.email %></td>

                <% if customer.is_deleted? %>
                  <td class = "text-black-50">退会</td>
                <% else %>
                  <td class = "text-success" >有効</td>
                <% end %>
              </tr>
            <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class='mr-5'>
      <%= paginate @customers %>
    </div>
  </div>
</div>