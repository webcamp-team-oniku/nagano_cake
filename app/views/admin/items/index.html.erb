<div class="container">
  <div class="row">
    <h5><span class="py-1 px-4 bg-light alert-secondary ">商品一覧</span></h5>
      <div class="ml-auto mr-3">
        <%= link_to "+", new_admin_item_path, class: "btn btn-outline-secondary rounded-circle shadow font-weight-bold" %>
      </div>
  </div>
  <div class='col-md-10 ml-5'>
　  <table class="table table-hover">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark border-bottom border-dark" %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_active == true %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <!-ページネーション->
    <div class="d-flex justify-content-center">
    　<%= paginate @items %>
    </div>
  </div>
</div>